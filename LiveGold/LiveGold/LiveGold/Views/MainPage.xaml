<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveGold.Views.MainPage" 
             NavigationPage.HasNavigationBar="False"
             xmlns:extension="clr-namespace:Xamarin.Forms.Skeleton;assembly=Xamarin.Forms.Skeleton"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             Title="{Binding Title}">
    <Grid>
        <ActivityIndicator IsRunning="{Binding IsLoading}" VerticalOptions="CenterAndExpand"/>
        <StackLayout Orientation="Vertical">
            <StackLayout.Triggers>
                <DataTrigger TargetType="StackLayout" Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
                <DataTrigger TargetType="StackLayout" Binding="{Binding IsLoading}" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </DataTrigger>
            </StackLayout.Triggers>
            <StackLayout>

                <Entry Text="Ho Chi Minh City" IsReadOnly="True"/>
                <ScrollView >
                    <ListView ItemsSource="{Binding GoldSJCs}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="Buy:" VerticalOptions="Center"/>
                                            <Label Text="{Binding Buy}" VerticalOptions="Center"/>
                                            <Label Text="Sell:" VerticalOptions="Center"/>
                                            <Label Text="{Binding Sell}" VerticalOptions="Center"/>
                                            <Label Text="{Binding Type}" VerticalOptions="Center"/>

                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </ScrollView>
                <TableView>
                    <TableSection Title="Global">
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding BuyGlobal}" TextColor="{Binding ColorBuyGlobal}" FontSize="Large"/>

                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>

                    </TableSection>
                </TableView>
            </StackLayout>


        </StackLayout>

    </Grid>
